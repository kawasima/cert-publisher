%div.well= t('message.new_user')

- if flash[:notice]
  .alert.alert-success= flash[:notice]

- if flash[:error]
  .alert.alert-error= flash[:error]

= form_for :user, url(:admin_user, :new), :class => "form-horizontal" do |f|
  = field_set_tag do
    = partial 'admin_user/form', :locals => {:f => f, :user => @user }
    %div.control-group
      = f.label :admin,
      { :caption => t('field.admin'), :class => "control-label"}
      %div.controls.doc-input-sizes
        = f.check_box :admin, :uncheck_value => 'false'
    %div.control-group
      %label.control-label{ :for => 'ca-password' }= t('field.ca_password')
      %div.controls.doc-input-sizes
        = password_field_tag :ca_password
  %div.form-actions
    %button.btn.btn-primary{ :type => 'submit' }= t('button.register')
