!!!
%html
  %head
    %meta{ :charset => 'utf-8' }
    %title Cert Publisher
    = stylesheet_link_tag 'bootstrap', 'application', 'select2', 'elusive-webfont'
    = javascript_include_tag 'jquery', 'jquery-ujs', 'bootstrap', 'select2.min'
    :javascript
      $.ajaxSetup({headers: {'X-CSRF-TOKEN': '#{session[:csrf]}'}});
  %body{ :style => 'padding-top: 90px;' }
    .navbar.navbar-fixed-top
      .navbar-inner
        .container
          = link_to url(:user, :index), :class => "brand" do
            %i.icon-key
            Cert Publisher
          .nav-collapse.collapse
            %ul.nav.nav-pills.pull-right
              - if @user && @user.admin?
                %li.drop_down
                  %a{:href => "#", :title => "Admin", :data => {:toggle => "dropdown"}}
                    %i.icon-cogs
                    Admin
                  %ul.dropdown-menu
                    %li
                      = link_to url(:admin_user, :index) do
                        %i.icon-user
                        User
                        - if RequestCert.count > 0 
                          %span.badge.badge-important
                            = RequestCert.count
                    %li
                      = link_to url(:admin_group, :index) do
                        %i.icon-group
                        Group
                    %li
                      = link_to url(:admin_audit, :access_log) do
                        %i.icon-eye-open
                        Audit
    .container
      =yield

